<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Button fx:id="inClassButton" mnemonicParsing="false" style="-fx-border-color: black; -fx-border-width: 3;"
        xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uml.ClassController">
    <contextMenu>
        <ContextMenu>
            <items>
                <MenuItem mnemonicParsing="false" onAction="#addClassNameAction" text="add class name"/>
            </items>
        </ContextMenu>
    </contextMenu>
    <graphic>
        <VBox alignment="CENTER">
            <children>
                <Label fx:id="className" style="text-decoration: underline;" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                </Label>
                <Separator minWidth="100.0" style="-fx-background-color: black;"/>
                <Label>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Separator minWidth="100.0" style="-fx-background-color: black;"/>
                <Label>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
            </children>
            <padding>
                <Insets left="-8.0" right="-8.0"/>
            </padding>
        </VBox>
    </graphic>
</Button>
