<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>

<Button minWidth="100.0" mnemonicParsing="false" styleClass="classElement" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uml.ClassController">
   <graphic>
      <VBox alignment="CENTER">
         <padding>
            <Insets left="-8.0" right="-8.0" />
         </padding>
         <children>
            <Label fx:id="className">
            </Label>
            <Separator minWidth="10.0" style="-fx-background-color: black;" />
            <Label fx:id="classArguments" textAlignment="CENTER">
            </Label>
            <Separator minWidth="100.0" style="-fx-background-color: black;" />
            <Label fx:id="classMethods">
            </Label>
         </children>
      </VBox>
   </graphic>
   <contextMenu>
   </contextMenu>
   <contextMenu>
      <ContextMenu fx:id="contextMenu">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#addClassNameAction" text="add class name" />
            <MenuItem mnemonicParsing="false" onAction="#addArgumentAction" text="add Argument" />
           <MenuItem mnemonicParsing="false" onAction="#addMethod" text="add method" />
        </items>
      </ContextMenu>
   </contextMenu>
</Button>
